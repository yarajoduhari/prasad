library 'default@master'

pipeline {
  agent {
    kubernetes {
      yamlFile 'kubernetespod.yml'
    }
   }
    stages {
    stage('Init') {
      steps {
        script {
          // Build the jars
          git 'https://github.com/yarajoduhari/maven-standalone-application.git'
          // word length checker  
          branchlint()
          }
        }
      }
    stage('maven') {
      steps{
       container('maven') {
        sh "mvn clean install"
        }
        }
      }
     stage('Building docker and pushing image to nexus') {
      steps {
            container('docker') {
              sh '''
              docker login http://localhost:8082 -uadmin -padmin
              docker build -t localhost:8082/nexus-docker/maven:$BUILD_NUMBER -f Dockerfile .
              docker push localhost:8082/nexus-docker/maven:$BUILD_NUMBER
              '''
            }
          }
        }
    }
  }
